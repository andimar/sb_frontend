<nav id="menu_desktop" role="navigation">
    <ul class="grid first-level">
        {% for item in menu %}
            {% if item.subitems %}

                <li class="col" aria-haspopup="true">
            
                    <a href="{{ item.link }}">{{ item.label }}</a>
                    
                    <ul class="dropdown grid" aria-label="submenu">
                        {% for subitem in item.subitems %}
                        <li class="col"><a href="{{ subitem.link }}">{{ subitem.label }}</a></li>
                        {% endfor %}    
                    </ul>
                </li>

            {% else %}

                <li class="col"><a href="{{ item.link }}">{{ item.label }}</a></li>

            {% endif %}            
        {% endfor %}
    </ul>
</nav>
